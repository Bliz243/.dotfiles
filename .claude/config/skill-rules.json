{
  "version": "2.0",
  "description": "Global skill activation rules. Projects can extend with their own skill-rules.json.",

  "skills": {
    "superpowers:brainstorming": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Design before coding - explore requirements and approaches",
      "promptTriggers": {
        "patterns": [
          "(let'?s\\s+)?(build|implement|create|add|develop)\\s+(a\\s+)?(new\\s+)?(feature|component|system|module|service)",
          "(think\\s+(about|through)|consider\\s+(the|this|alternatives?)|should\\s+we|what\\s+if)",
          "(options?|approach(es)?|best\\s+way|how\\s+should|evaluate|compare|trade-?offs?)",
          "(architect(ure)?|design\\s+(the|a|this)|structure|reorganize|refactor)"
        ]
      },
      "activation": {
        "icon": "*",
        "skill": "superpowers:brainstorming",
        "message": "Design before coding"
      }
    },

    "superpowers:systematic-debugging": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Structured debugging approach",
      "promptTriggers": {
        "patterns": [
          "(bug|fix|error|issue|broken|not working|fails?|debug|troubleshoot)"
        ]
      },
      "activation": {
        "icon": "*",
        "skill": "superpowers:systematic-debugging",
        "message": "Structured debugging"
      }
    },

    "explore-agent": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Use Explore subagent to preserve main context",
      "promptTriggers": {
        "patterns": [
          "(find|search|look\\s+for|locate|where\\s+is|where\\s+are|show\\s+me)\\s+(all|the|any)?\\s*(files?|code|implementation|function|class|component|pattern)",
          "(how\\s+does|how\\s+do|how\\s+is)\\s+(the|this|our)\\s+[\\w\\s]+\\s+(work|implemented|structured|organized)",
          "(understand|explore|analyze|investigate|examine)\\s+(the|this|our)?\\s*(codebase|code|implementation|feature|module|domain)",
          "what\\s+(files?|code|components?)\\s+(handle|implement|contain|have)",
          "where\\s+(is|are|do|does)\\s+[\\w\\s]+(defined|implemented|located|handled|used)"
        ]
      },
      "activation": {
        "icon": "*",
        "skill": null,
        "message": "Use Explore agent - subagents preserve your context"
      }
    },

    "playwright-cli": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Browser automation via playwright-cli",
      "promptTriggers": {
        "patterns": [
          "(test|check|verify|inspect|browse|open|navigate)\\s+(the\\s+)?(website|web\\s*page|page|site|app|url|ui|frontend|browser)",
          "(screenshot|scrape|extract|fill\\s+form|form\\s+fill|click|interact)\\s+(with\\s+)?(the\\s+)?(website|web\\s*page|page|site|element|button|link)",
          "(playwright|browser\\s+automation|web\\s+test|e2e\\s+test|end.to.end)",
          "(check|test|verify)\\s+(how|what|if)\\s+(the\\s+)?(page|site|app|ui)\\s+(looks|works|renders|behaves|displays)"
        ]
      },
      "activation": {
        "icon": "*",
        "skill": "playwright-cli",
        "message": "Browser automation via playwright-cli"
      }
    },

    "ui-design": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Design system consistency for app UI",
      "promptTriggers": {
        "patterns": [
          "(build|create|add|implement|make)\\s+(a\\s+)?(page|component|form|table|card|modal|dialog|sheet|settings|dashboard|sidebar|nav)",
          "(style|fix|update|change|modify)\\s+(the|this|a)?\\s*(page|component|form|table|card|layout|spacing|colors?|theme)",
          "(shadcn|tailwind|design\\s+system|consistent|styling|ui\\s+pattern)",
          "(button|badge|input|select|dropdown|tab|toast|skeleton|empty\\s+state)"
        ]
      },
      "activation": {
        "icon": "*",
        "skill": "ui-design",
        "message": "Design system consistency"
      }
    },

    "ultra-frontend": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Distinctive, production-grade creative interfaces",
      "promptTriggers": {
        "patterns": [
          "(landing\\s+page|marketing|showcase|portfolio|creative|bold|striking)",
          "(style|beautify|redesign)\\s+(the|this|a)?\\s*(website|landing|marketing)",
          "(html|css)\\s+(from\\s+scratch|standalone|static)"
        ]
      },
      "activation": {
        "icon": "*",
        "skill": "ultra-frontend",
        "message": "Distinctive UI design (creative/marketing)"
      }
    }
  }
}
