[user]
	# Set these in your local ~/.gitconfig.local file or via command line:
	# git config --global user.name "Your Name"
	# git config --global user.email "your.email@example.com"

[core]
	# Use global gitignore
	excludesfile = ~/.gitignore_global
	# Use less as pager
	pager = less -FRX
	# Auto convert line endings
	autocrlf = input
	# Detect whitespace errors
	whitespace = trailing-space,space-before-tab
	# Use parallel I/O operations
	preloadindex = true
	fscache = true

[init]
	defaultBranch = main

[color]
	# Colorize command line output
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green
	changed = yellow
	untracked = red

[push]
	# Push current branch even if remote name differs
	default = current
	# Automatically push relevant tags
	followTags = true

[pull]
	# Use rebase instead of merge when pulling
	rebase = true

[fetch]
	# Automatically prune deleted remote branches
	prune = true
	# Prune tags as well
	pruneTags = true

[rebase]
	# Automatically stash and unstash during rebase
	autoStash = true
	# Auto-update submodules
	updateRefs = true

[merge]
	# Include summaries of merged commits
	log = true
	# Use better merge conflict markers
	conflictstyle = diff3

[diff]
	# Use more context in diffs
	context = 5
	# Better diff algorithm
	algorithm = histogram
	# Detect moved lines
	colorMoved = zebra

[help]
	# Autocorrect typos
	autocorrect = 1

[credential]
	# Cache credentials for 1 hour
	helper = cache --timeout=3600

[alias]
	# Status shortcuts
	st = status -sb
	s = status

	# Add shortcuts
	a = add
	aa = add --all
	ap = add --patch

	# Commit shortcuts
	c = commit
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit

	# Checkout shortcuts
	co = checkout
	cob = checkout -b
	com = checkout main
	cod = checkout develop

	# Branch shortcuts
	b = branch
	ba = branch -a
	bd = branch -d
	bD = branch -D

	# Diff shortcuts
	d = diff
	ds = diff --staged
	dw = diff --word-diff

	# Log shortcuts
	l = log --oneline --graph --decorate
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lga = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all

	# Push/Pull shortcuts
	p = push
	pf = push --force-with-lease
	pu = push -u origin HEAD
	pl = pull

	# Remote shortcuts
	r = remote
	rv = remote -v

	# Stash shortcuts
	ss = stash save
	sp = stash pop
	sl = stash list
	sa = stash apply

	# Reset shortcuts
	unstage = reset HEAD --
	undo = reset --soft HEAD^

	# Show shortcuts
	last = log -1 HEAD
	who = shortlog -sn --

	# Cleanup shortcuts
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"
	cleanupf = "!git branch | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -D"

	# Find commits by message
	find = "!git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S"

	# Aliases to show what was changed
	changed = diff --name-only HEAD~1 HEAD
	changedfiles = diff --name-status HEAD~1 HEAD

	# Working tree status
	wip = "!git add -A && git commit -m 'WIP'"
	unwip = "!git log -1 --pretty=%B | grep -q 'WIP' && git reset HEAD~1 || echo 'Last commit is not WIP'"

	# Show configured aliases
	aliases = config --get-regexp ^alias\\.

	# Better blame
	praise = blame

	# Contributors
	contributors = shortlog --summary --numbered

[include]
	# Include local git config (for machine-specific settings)
	path = ~/.gitconfig.local
